{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "NSQL",
  "patterns": [
    { "include": "#comments" },
    { "include": "#statement-terminator" },
    { "include": "#query-keywords" },
    { "include": "#clause-keywords" },
    { "include": "#conditional-keywords" },
    { "include": "#action-keywords" },
    { "include": "#operators" },
    { "include": "#punctuation" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#aggregate-functions" },
    { "include": "#data-types" },
    { "include": "#constants" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "comments": {
      "name": "comment.line.nsql",
      "match": ">>.*$"
    },
    "statement-terminator": {
      "name": "punctuation.terminator.nsql",
      "match": "\\bPLEASE\\b"
    },
    "query-keywords": {
      "name": "keyword.query.nsql",
      "match": "\\b(ASK|TELL|FIND|SHOW|GET|HOW MANY)\\b"
    },
    "clause-keywords": {
      "name": "keyword.clause.nsql",
      "match": "\\b(FOR|TO|IN|FROM|GROUP BY|HAVING|SORT BY|ORDER BY|LIMIT|OFFSET|AS|WITH|VIA)\\b"
    },
    "conditional-keywords": {
      "name": "keyword.conditional.nsql",
      "match": "\\b(WHERE|THAT|WHICH|IF|WHEN|AND|OR|NOT|BETWEEN|EXISTS|HAS PATH|LIKE)\\b"
    },
    "action-keywords": {
      "name": "keyword.action.nsql",
      "match": "\\b(ADD|REMOVE|UPDATE|CREATE|TRAVERSE)\\b"
    },
    "operators": {
      "name": "keyword.operator.nsql",
      "match": "(=|>|<|>=|<=|!=|\\+|-|\\*|/|%)"
    },
    "punctuation": {
      "name": "punctuation.nsql",
      "match": "(\\.|,|:|;)"
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.single.nsql",
          "begin": "'",
          "end": "'"
        },
        {
          "name": "string.quoted.double.nsql",
          "begin": "\"",
          "end": "\""
        }
      ]
    },
    "numbers": {
      "name": "constant.numeric.nsql",
      "match": "\\b\\d+(\\.\\d+)?([FDM])?\\b"
    },
    "aggregate-functions": {
      "name": "support.function.aggregate.nsql",
      "match": "\\b(SUM|AVG|COUNT|MIN|MAX)\\b"
    },
    "data-types": {
      "name": "storage.type.nsql",
      "match": "\\b(INTEGER|INT|DOUBLE|FLOAT|DECIMAL|JSONB|DATETIME|TIMESTAMP|VARCHAR|STRING|TEXT|MAP|GRAPH|BOOLEAN|BOOL|LIST|ARRAY)\\b"
    },
    "constants": {
      "name": "constant.language.nsql",
      "match": "\\b(TRUE|FALSE|NULL|NOW)\\b"
    },
    "identifiers": {
      "match": "\\b[A-Za-z][A-Za-z0-9_]*\\b",
      "name": "variable.other.nsql"
    }
  },
  "scopeName": "source.nsql"
}
